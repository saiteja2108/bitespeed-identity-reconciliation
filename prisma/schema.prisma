generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Configure DATABASE_URL in .env (or Render environment) to point at your
  // PostgreSQL database. Example:
  // DATABASE_URL="postgresql://user:password@localhost:5432/mydb"
  // In production Render will provide a value automatically when you add a
  // PostgreSQL service.
  url      = env("DATABASE_URL")
}

model Contact {
  id             Int       @id @default(autoincrement())
  email          String?
  phoneNumber    String?
  linkedId       Int?
  linkPrecedence String    @default("primary")
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  deletedAt      DateTime?

  primaryContact     Contact?   @relation("ContactToSecondary", fields: [linkedId], references: [id])
  secondaryContacts  Contact[]  @relation("ContactToSecondary")
}